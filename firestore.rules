rules_version = '2';

/**
 * Firestore Security Rules for CrewShift Application
 * 
 * These rules ensure that:
 * 1. Only authenticated users can access the database
 * 2. Users can only read/write their own data
 * 3. Analytics data requires authentication but allows broader access for statistics
 */

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User documents - only the owner can read/write
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Validate data structure for writes
      allow create, update: if isOwner(userId) 
        && request.resource.data.keys().hasAll(['crew', 'settings'])
        && request.resource.data.crew is string
        && request.resource.data.settings is map;
    }
    
    // Analytics collection - authenticated users can read/write
    // This allows for app-wide statistics while maintaining user privacy
    match /analytics/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
